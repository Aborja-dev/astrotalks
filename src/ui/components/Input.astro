---
interface Props {
    label: string
}
const { label } = Astro.props
---

<fieldset class="flex flex-col gap-2">
    <label class="text-text-light font-bold title text-lg uppercase" for="name"
        >{label}</label
    >
    <input class="px-4 py-2 rounded-lg bg-slate-700/50 backdrop-blur-lg" type="text" />
</fieldset>
