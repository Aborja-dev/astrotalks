---
import CTA from "@/ui/components/CTA.astro";
import RocketIcon from "@/ui/icons/RocketIcon.astro";

export interface Props {
    title: string;
    subtitle: string;
    description: string;
    urlCoverImage: string
    ctaText: string
}
const { title, subtitle, description, urlCoverImage, ctaText } = Astro.props;

---

<section class="w-full h-screen relative overlay">
    <figure class="w-full h-full">
        <img src={urlCoverImage} alt={title} class="w-full h-full object-cover" />
    </figure>
    <div class=""></div>    
    <div class="absolute top-1/2 left-[100px]  space-y-4 max-w-[600px] mt-[-100px]">
        <h2 class="text-2xl text-text-light">{subtitle}</h2>
        <h1 class="text-5xl font-semibold text-accent">{title}</h1>
        <p class="text-text-light text-lg">{description}</p>

        <CTA>
            <RocketIcon />
            {ctaText}
        </CTA>
        
    </div>
</section>