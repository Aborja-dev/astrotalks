---
import Button from '@/ui/components/Button.astro';
import Input from '@/ui/components/Input.astro';
import TextArea from '@/ui/components/TextArea.astro';

interface Props {
    sectionTitle: string;
    copy: string;
    formTitle: string;
}
const { sectionTitle, copy, formTitle } = Astro.props
---

<section class="w-full py-8">
    <h2 class="text-3xl text-text-light font-bold text-center mb-8">
        {sectionTitle}
    </h2>
    <div class="w-4/5 h-full grid grid-cols-2 gap-4 mx-auto">
        <p class="text-text-light text-3xl">
            {copy}
        </p>
        <div class="rounded-lg bg-slate-800 p-8">
            <h2 class="text-3xl text-text-light text-center font-bold mb-4">
                {formTitle}
            </h2>
            <form class="flex flex-col justify-between gap-4 mt-8">
                <Input label="Nombre" /> 
                <Input label="Email" />
                <Input label="Telefono" />
                <TextArea label="Descripcion" rows={10} placeholder="Escribe aqui tu propuesta" />
                <Button label="Enviar" />
            </form>
        </div>
    </div>
</section>
