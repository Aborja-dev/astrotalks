---
import type { Section, User } from '@/lib/types'
import TeamCard from '@/ui/components/cards/TeamCard.astro'


interface Props extends Section {
    users: User[]
}
const { users, title, subtitle } = Astro.props
---

<section id="team" class="w-full py-8 min-h-[500px] bg-gray-800/50 backdrop-blur-lg">
     <h2 class="text-3xl text-text-light font-bold text-center mb-8">{title}</h2>
    <h3 class="text-3xl text-text-light font-bold text-center mb-8"> {subtitle}</h3>
    <div class="xl:w-4/5 w-11/12 mx-auto py-8 h-full grid grid-cols-2 xl:grid-cols-3 gap-4">
        {
            users.map((user) => (
                <div class="w-full max-w-[350px] mx-auto h-full">
                    <TeamCard {...user} />
                </div>
            ))
        }
    </div>
</section>
