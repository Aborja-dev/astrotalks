---
import type { TalkInfo, User } from "@/lib/types";
import AboutSection from "@/ui/components/sections/AboutSection.astro";
import HeroSection from "@/ui/components/sections/HeroSection.astro";
import ProposalSection from "@/ui/components/sections/ProposalSection.astro";
import TalksSection from "@/ui/components/sections/TalksSection.astro";
import TeamSection from "@/ui/components/sections/TeamSection.astro";


interface Props {
    copys: any,
    talks: TalkInfo[],
    users: User[]
}
const { copys, talks, users } = Astro.props
---

<HeroSection
    title={copys.HERO.TITLE}
    subtitle={copys.HERO.SUBTITLE}
    description={copys.HERO.DESCRIPTION}
    ctaText={copys.HERO.CTA}
    urlCoverImage="/assets/images/background.jpg"
/>
<AboutSection description={copys.ABOUT.DESCRIPTION}/>
<TalksSection talks={talks} title={copys.TALKS.TITLE} subtitle={copys.TALKS.SUBTITLE} />
<TeamSection users={users} title={copys.TEAM.TITLE} subtitle={copys.TEAM.SUBTITLE}/>
<ProposalSection copy={copys.CONTACT.INFO} formTitle={copys.CONTACT.FORM_TITLE} sectionTitle={copys.CONTACT.TITLE} />
